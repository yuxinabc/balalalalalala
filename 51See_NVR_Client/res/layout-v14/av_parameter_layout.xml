<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hui" >
    <TextView 
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@color/qianhui"
        android:textStyle="bold|italic"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:text="@string/videoAudioParameters"/>
    
            
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_below="@id/title"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center|start">

                    <TextView
                        android:id="@+id/textViewIsSearching"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textColor="@color/qianhei"
                        android:text="@string/videoFormat" 
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <Spinner
                        android:id="@+id/videoFormatSpinner"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tableRow3"
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="30dp" >

                    <TextView
                        android:id="@+id/firstChannelTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:text="720P" 
                        android:textSize="13sp"
                        android:textColor="@color/shenhui"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RelativeLayout>
                
                <ImageView 
	           android:layout_width="fill_parent"
	           android:layout_height="2dp"
	           android:scaleType="fitXY"
	           android:src="@drawable/progress_buffering"
	           android:background="@color/white"/>

                <RelativeLayout
                    android:background="@color/white"
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center|start" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textColor="@color/qianhei"
                        android:text="@string/frameRate" 
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <Spinner
                        android:id="@+id/frameRateSpinner1"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="wrap_content" 
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RelativeLayout>
                
                <ImageView 
	           android:layout_width="fill_parent"
	           android:layout_height="2dp"
	           android:scaleType="fitXY"
	           android:src="@drawable/progress_buffering"
	           android:background="@color/white"/>

                <RelativeLayout
                    android:id="@+id/tableRow4"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center|start" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textColor="@color/qianhei"
                        android:text="@string/codeRate" 
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <Spinner
                        android:id="@+id/bitRateSpinner1"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="wrap_content" 
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RelativeLayout>
                

                <RelativeLayout
                    android:id="@+id/tableRow5"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="30dp" >

                    <TextView
                        android:id="@+id/secondChanneltextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="VGA"
                        android:textSize="13sp"
                        android:textColor="@color/shenhui"
                        android:layout_marginLeft="5dp" 
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RelativeLayout>
                
                <ImageView 
	           android:layout_width="fill_parent"
	           android:layout_height="2dp"
	           android:scaleType="fitXY"
	           android:src="@drawable/progress_buffering"
	           android:background="@color/white"/>

                <RelativeLayout
                    android:background="@color/white"
                    android:id="@+id/tableRow6"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center|start" >

                    <TextView
                        android:id="@+id/secondChannelFrameRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textColor="@color/qianhei"
                        android:text="@string/frameRate" 
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <Spinner
                        android:id="@+id/frameRateSpinner2"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="wrap_content" 
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RelativeLayout>

                <ImageView 
	           android:layout_width="fill_parent"
	           android:layout_height="2dp"
	           android:scaleType="fitXY"
	           android:src="@drawable/progress_buffering"
	           android:background="@color/white"/>
                
                <RelativeLayout
                    android:background="@color/white"
                    android:id="@+id/tableRow8"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center|start" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textColor="@color/qianhei"
                        android:text="@string/codeRate" 
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <Spinner
                        android:id="@+id/bitRateSpinner2"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="wrap_content" 
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RelativeLayout>
                
             

			<RelativeLayout
			    android:background="@color/white"
			    android:id="@+id/tableRow7"
			    android:layout_width="match_parent"
			    android:layout_height="45dp"
			    android:layout_marginTop="10dp"
			    android:gravity="right">
                
			    <TextView 
			        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/qianhei"
                        android:text="@string/lrRotation" 
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
			
			    <com.my51c.see51.widget.NewSwitch
	                    android:id="@+id/mirrorSwitch"
	                    android:background="@drawable/phone_my_setting_switch_selected_new"
        				android:textColor="@android:color/white"
        				android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
        				android:textSize="14sp"
        				android:paddingLeft="5dp"
        				android:paddingRight="5dp"
        				android:layout_width="58dp"
        				android:layout_height="25dp"
        				android:layout_marginLeft="80dp"
        				android:layout_marginRight="2dp"
	                   	/>
			</RelativeLayout>
			
			<ImageView 
	           android:layout_width="fill_parent"
	           android:layout_height="2dp"
	           android:scaleType="fitXY"
	           android:src="@drawable/progress_buffering"
	           android:background="@color/white"/>
			
		    <RelativeLayout
		        android:background="@color/white"
		        android:id="@+id/tableRow9"
		        android:layout_width="match_parent"
		        android:layout_height="45dp" 
		        android:gravity="right">
		
		        <TextView 
			        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/qianhei"
		            	android:text="@string/udRotation"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
			
			    <com.my51c.see51.widget.NewSwitch
	                    android:id="@+id/flipSwitch"
	                    android:background="@drawable/phone_my_setting_switch_selected_new"
        				android:textColor="@android:color/white"
        				android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
        				android:textSize="14sp"
        				android:paddingLeft="5dp"
        				android:paddingRight="5dp"
        				android:layout_width="58dp"
        				android:layout_height="25dp"
        				android:layout_marginLeft="80dp"
        				android:layout_marginRight="2dp"
	                   	/>
		  
		
		    </RelativeLayout>
		    
		    <ImageView 
	           android:layout_width="fill_parent"
	           android:layout_height="2dp"
	           android:scaleType="fitXY"
	           android:src="@drawable/progress_buffering"
	           android:background="@color/white"/>
		
		    <RelativeLayout
		        android:background="@color/white"
		        android:id="@+id/tableRow10"
		        android:layout_width="match_parent"
		        android:layout_height="45dp"
		        android:gravity="right">
		
		        <TextView 
			        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
		            	android:text="@string/audio"
		            	android:textColor="@color/qianhei"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
			
			    <com.my51c.see51.widget.NewSwitch
	                    android:id="@+id/audioSwitch"
	                    android:background="@drawable/phone_my_setting_switch_selected_new"
        				android:textColor="@android:color/white"
        				android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
        				android:textSize="14sp"
        				android:paddingLeft="5dp"
        				android:paddingRight="5dp"
        				android:layout_width="58dp"
        				android:layout_height="25dp"
        				android:layout_marginLeft="80dp"
        				android:layout_marginRight="2dp"
	                   	/>
		       
		
		    </RelativeLayout>			
			<LinearLayout
                android:id="@+id/tableRow60"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/buttonCancel"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/shenhui"
                    android:background="@drawable/shap_dialog_btn"
                    android:text="@android:string/no" />

                <Button
                    android:id="@+id/buttonOK"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:textColor="@color/orange"
                    android:background="@drawable/shap_dialog_btn"
                    android:text="@android:string/yes" />

            </LinearLayout> 
			
        </LinearLayout>
        
    </ScrollView>
</RelativeLayout>