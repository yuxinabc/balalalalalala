<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/qianhui" >

     <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/header_bar_color">
        <LinearLayout
            android:id="@+id/backLayout" 
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
        	android:orientation="horizontal"
        	android:layout_alignParentLeft="true"
        	android:background="@color/header_bar_color">
            <ImageView 
                android:layout_width="30dp"
            	android:layout_height="30dp"
            	android:layout_marginLeft="10dp"
            	android:layout_gravity="center_vertical"
                android:background="@drawable/back_img_shap"/>
        	
        </LinearLayout>
        <TextView 
            android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
          	android:textColor="@color/white"
           	android:textSize="18sp"
           	android:layout_centerInParent="true"
           	android:text="@string/videoAudioParameters"/>
        
        <TextView 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/saveTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_save"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold|italic"/>
    </RelativeLayout>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@drawable/progress_buffering"/>
    
            
    <com.my51c.see51.widget.ReboundScrollView 
        android:id="@+id/scrollView1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center|start">

                    <TextView
                        android:id="@+id/textViewIsSearching"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:text="@string/videoFormat" 
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/videoFormatSpinner"
                        android:layout_width="wrap_content"
                        android:text="1080P/720P/VGA"
                        android:textSize="15sp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RelativeLayout>
                
                <RelativeLayout
			    android:background="@color/white"
			    android:id="@+id/tableRow7"
			    android:layout_width="match_parent"
			    android:layout_height="45dp"
			    android:layout_marginTop="1dp"
			    android:gravity="right">
                
			    <TextView 
			        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:text="@string/lrRotation" 
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
			
			    <com.my51c.see51.widget.NewSwitch
	                    android:id="@+id/mirrorSwitch"
	                    android:background="@drawable/phone_my_setting_switch_selected_new"
        				android:textColor="@android:color/white"
        				android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
        				android:textSize="14sp"
        				android:paddingLeft="5dp"
        				android:paddingRight="5dp"
        				android:layout_width="58dp"
        				android:layout_height="25dp"
        				android:layout_marginLeft="80dp"
        				android:layout_marginRight="10dp"
	                   	/>
			</RelativeLayout>
			
			
		    <RelativeLayout
		        android:layout_marginTop="1dp"
		        android:background="@color/white"
		        android:id="@+id/tableRow9"
		        android:layout_width="match_parent"
		        android:layout_height="45dp" 
		        android:gravity="right">
		
		        <TextView 
			        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
		            	android:text="@string/udRotation"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
			
			    <com.my51c.see51.widget.NewSwitch
	                    android:id="@+id/flipSwitch"
	                    android:background="@drawable/phone_my_setting_switch_selected_new"
        				android:textColor="@android:color/white"
        				android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
        				android:textSize="14sp"
        				android:paddingLeft="5dp"
        				android:paddingRight="5dp"
        				android:layout_width="58dp"
        				android:layout_height="25dp"
        				android:layout_marginLeft="80dp"
        				android:layout_marginRight="10dp"
	                   	/>
		  
		
		    </RelativeLayout>
		    
		
		    <RelativeLayout
		        android:layout_marginTop="1dp"
		        android:background="@color/white"
		        android:id="@+id/tableRow10"
		        android:layout_width="match_parent"
		        android:layout_height="45dp"
		        android:gravity="right">
		
		        <TextView 
			        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
		            	android:text="@string/AudioCapture"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
			
			    <com.my51c.see51.widget.NewSwitch
	                    android:id="@+id/audioSwitch"
	                    android:background="@drawable/phone_my_setting_switch_selected_new"
        				android:textColor="@android:color/white"
        				android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
        				android:textSize="14sp"
        				android:paddingLeft="5dp"
        				android:paddingRight="5dp"
        				android:layout_width="58dp"
        				android:layout_height="25dp"
        				android:layout_marginLeft="80dp"
        				android:layout_marginRight="10dp"
	                   	/>
		       
		    </RelativeLayout>			

					<TextView
                        android:id="@+id/secondChanneltextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VGA"
                        android:textSize="13sp"
                        android:textColor="@color/shenhui"
                        android:layout_marginLeft="10dp" 
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                <RelativeLayout
                    android:background="@color/white"
                    android:id="@+id/tableRow6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center|start" >
                    <LinearLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                    	<TextView
                        android:id="@+id/secondChannelFrameRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:text="@string/frameRate" 
                        android:layout_marginBottom="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    	<com.my51c.see51.widget.SegmentedGroup
                        	android:id="@+id/frameRateSpinner2"
                        	android:layout_width="fill_parent"
                        	android:gravity="center"
                        	android:layout_height="wrap_content" 
                        	android:orientation="horizontal">
                    		<RadioButton
                    		    android:id="@+id/frameRate2_c1"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:checked="true"
								android:textSize="15sp"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:text="15" 
								style="@style/RadioButton" />
						
							<RadioButton
							    android:id="@+id/frameRate2_c2"
								android:layout_width="wrap_content"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:textSize="15sp"
								android:layout_height="wrap_content"
								android:text="8"
								style="@style/RadioButton"  />
							
							<RadioButton
							    android:id="@+id/frameRate2_c3"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:checked="true"
								android:textSize="15sp"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:text="5" 
								style="@style/RadioButton" />
						
							<RadioButton
							    android:id="@+id/frameRate2_c4"
								android:layout_width="wrap_content"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:textSize="15sp"
								android:layout_height="wrap_content"
								android:text="3"
								style="@style/RadioButton"  />
						</com.my51c.see51.widget.SegmentedGroup>
                    </LinearLayout>
                </RelativeLayout>

                
                <RelativeLayout
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:id="@+id/tableRow8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center|start" >
					<LinearLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                    	<TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:text="@string/codeRate" 
                        android:layout_marginBottom="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    	<com.my51c.see51.widget.SegmentedGroup
                        	android:id="@+id/bitRateSpinner2"
                        	android:layout_width="fill_parent"
                        	android:gravity="center"
                        	android:layout_height="wrap_content" 
                        	android:orientation="horizontal">
                    		<RadioButton
                    		    android:id="@+id/bitRate2_c1"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:checked="true"
								android:textSize="15sp"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:text="100" 
								style="@style/RadioButton" />
						
							<RadioButton
							    android:id="@+id/bitRate2_c2"
								android:layout_width="wrap_content"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:textSize="15sp"
								android:layout_height="wrap_content"
								android:text="120"
								style="@style/RadioButton"  />
							
							<RadioButton
							    android:id="@+id/bitRate2_c3"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:checked="true"
								android:textSize="15sp"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:text="150" 
								style="@style/RadioButton" />
						
							<RadioButton
							    android:id="@+id/bitRate2_c4"
								android:layout_width="wrap_content"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:textSize="15sp"
								android:layout_height="wrap_content"
								android:text="200"
								style="@style/RadioButton"  />
						</com.my51c.see51.widget.SegmentedGroup>
                    	</LinearLayout>
                </RelativeLayout>
                    <TextView
                        android:id="@+id/firstChannelTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1080P/720P" 
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="13sp"
                        android:textColor="@color/shenhui"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                
                <RelativeLayout
                    android:background="@color/white"
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center|start" >
					<LinearLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:text="@string/frameRate" 
                        android:layout_marginBottom="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    	<com.my51c.see51.widget.SegmentedGroup
                        	android:id="@+id/frameRateSpinner1"
                        	android:layout_width="fill_parent"
                        	android:gravity="center"
                        	android:layout_height="wrap_content" 
                        	android:orientation="horizontal">
                    		<RadioButton
                    		    android:id="@+id/frameRate1_c1"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:checked="true"
								android:textSize="15sp"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:text="30" 
								style="@style/RadioButton" />
						
							<RadioButton
							    android:id="@+id/frameRate1_c2"
								android:layout_width="wrap_content"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:textSize="15sp"
								android:layout_height="wrap_content"
								android:text="24"
								style="@style/RadioButton"  />
							
							<RadioButton
							    android:id="@+id/frameRate1_c3"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:checked="true"
								android:textSize="15sp"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:text="15" 
								style="@style/RadioButton" />
						
							<RadioButton
							    android:id="@+id/frameRate1_c4"
								android:layout_width="wrap_content"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:textSize="15sp"
								android:layout_height="wrap_content"
								android:text="8"
								style="@style/RadioButton"  />
						</com.my51c.see51.widget.SegmentedGroup>
                    </LinearLayout>
                    
                </RelativeLayout>
                

                <RelativeLayout
                    android:layout_marginTop="1dp"
                    android:id="@+id/tableRow4"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center|start" >
                    <LinearLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:text="@string/codeRate" 
                        android:layout_marginBottom="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    	<com.my51c.see51.widget.SegmentedGroup
                        	android:id="@+id/bitRateSpinner1"
                        	android:layout_width="fill_parent"
                        	android:gravity="center"
                        	android:layout_height="wrap_content" 
                        	android:orientation="horizontal">
                    		<RadioButton
                    		    android:layout_weight="1"
                    		    android:id="@+id/bitRate1_c1"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:checked="true"
								android:textSize="15sp"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:text="500" 
								style="@style/RadioButton_lager" />
						
							<RadioButton
							    android:layout_weight="1"
							    android:id="@+id/bitRate1_c2"
								android:layout_width="wrap_content"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:textSize="15sp"
								android:layout_height="wrap_content"
								android:text="1000"
								style="@style/RadioButton_lager"  />
							
							<RadioButton
							    android:layout_weight="1"
							    android:id="@+id/bitRate1_c3"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:checked="true"
								android:textSize="15sp"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:text="2000" 
								style="@style/RadioButton_lager" />
						
							<RadioButton
							    android:layout_weight="1"
							    android:id="@+id/bitRate1_c4"
								android:layout_width="wrap_content"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:textSize="15sp"
								android:layout_height="wrap_content"
								android:text="3000"
								style="@style/RadioButton_lager"  />
							<RadioButton
							    android:layout_weight="1"
							    android:id="@+id/bitRate1_c5"
								android:layout_width="wrap_content"
								android:gravity="center"
								android:textColor="@color/text_color"
								android:textSize="15sp"
								android:layout_height="wrap_content"
								android:text="5000"
								style="@style/RadioButton_lager"  />
						</com.my51c.see51.widget.SegmentedGroup>
                    </LinearLayout>

                    
                </RelativeLayout>

                
        </LinearLayout>
        
    </com.my51c.see51.widget.ReboundScrollView >
</LinearLayout>