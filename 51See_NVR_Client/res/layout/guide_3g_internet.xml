<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout3GInternet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qianhui"
    android:orientation="vertical" >

    <TableLayout 
     android:id="@+id/table3gapn"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
        <TableRow>
            <TextView
              style="@style/style0"
              android:id="@+id/textview3guser"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              android:gravity="right"
              android:textColor="@color/text_color"
              android:text="@string/username">
            </TextView>
            <EditText
            android:id="@+id/edt3GUser"
          	android:layout_weight="1"
            android:textColor="@color/qianhei"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shap_trans_stork"
            android:inputType="none" />
        </TableRow>
        <TableRow>
            <TextView
              style="@style/style0"
              android:id="@+id/textview3gpasswd"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              android:gravity="right"
              android:textColor="@color/text_color"
              android:text="@string/password">
            </TextView>
            <EditText
            android:id="@+id/edt3Gpasswd"
          	android:layout_weight="1"
          	android:textColor="@color/qianhei"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shap_trans_stork"
            android:inputType="none" />
        </TableRow>
        <TableRow>
            <TextView
              style="@style/style0"
              android:id="@+id/textviewapn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              android:gravity="right"
              android:textColor="@color/text_color"
              android:text="@string/apn3g">
            </TextView>
            <EditText
            android:id="@+id/edt3Gapn"
          	android:layout_weight="1"
          	android:textColor="@color/qianhei"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shap_trans_stork"
            android:inputType="none" />
        </TableRow>
        <TableRow>
            <TextView
              style="@style/style0"
              android:id="@+id/textview3gphonenum"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              android:gravity="right"
              android:textColor="@color/text_color"
              android:text="@string/phonenum3g">
            </TextView>
            <EditText
            android:id="@+id/edt3Gphone"
          	android:layout_weight="1"
          	android:textColor="@color/qianhei"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shap_trans_stork"
            android:inputType="none" />
        </TableRow>
    </TableLayout>
   <RelativeLayout
        android:id="@+id/setLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
       >
       <ProgressBar
        android:id="@+id/progressBar3GWait"
        style="?android:attr/progressBarStyleSmall"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible" />
        <TextView
           android:id="@+id/txtSet3GResult"
           style="@style/textFont"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="25dp"
           android:textColor="@color/blue" />
    </RelativeLayout>
    	
    <Button
        android:id="@+id/btnSet3GOK"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_shap"
        android:text="@string/next"
        android:textColor="@color/white"
        />

