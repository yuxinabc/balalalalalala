<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white" >
     <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="60dp"
    	android:background="@drawable/shap_menu_linearlayout"
    	android:gravity="center_vertical">

    <ImageView
        android:id="@+id/localsettingItemImage"
        android:layout_width="30dp"
  	    android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/local_info_advanced_x2" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/shenhui"
            android:gravity="center"
            android:textSize="18sp"
            android:text="fdsfhkd"/>

        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10dp"
            android:text="edsf" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="6dip"
        android:background="@drawable/arrow_black"
        android:layout_gravity="center_vertical" />
    </LinearLayout>

</RelativeLayout>