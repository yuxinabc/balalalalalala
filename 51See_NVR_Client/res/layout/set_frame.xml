<?xml version="1.0" encoding="utf-8"?>
        
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/white"
	   >
	
	    <LinearLayout
	        android:id="@+id/topLayout"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:layout_alignParentTop="true"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:background="@color/header_bar_color">
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginLeft="27dp"
	        	android:layout_marginRight="30dp"
	            android:gravity="center">
	            <ImageView
	            android:id="@+id/imgUser"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:background="@drawable/vcard" />
	            <TextView
	            android:id="@+id/txtUser"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/notLogedIn"
	            android:textSize="15sp"
	            android:textStyle="italic|bold"
	            android:textColor="@color/black" 
	            android:visibility="gone"/>
	        </LinearLayout>
	
	        
	        <LinearLayout 
	            android:id="@+id/loginLayout"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:background="@drawable/shap_linearlayout"
	            android:gravity="center_vertical">
	            <TextView 
	                android:id="@+id/loginLayoutTx"
	                android:textStyle="italic"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/_clicktologin"
	                android:textSize="15sp"
	                android:textColor="@color/white"/>
	            <ImageView 
	                android:id="@+id/loginLayoutImg"
	                android:layout_width="30dp"
	                android:layout_height="wrap_content"
	                android:background="@drawable/gointo_img"/>
	        </LinearLayout>
	        <LinearLayout 
	           	android:visibility="gone"
	            android:layout_marginLeft="20dp"
	            android:id="@+id/exitLayout"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:gravity="center_vertical">
	            <TextView 
	                android:id="@+id/exitLayoutTx"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/exit"
	                android:textSize="15sp"
	                android:textColor="@color/black"/>
	            <ImageView 
	                android:id="@+id/exitLayoutImg"
	                android:layout_width="30dp"
	                android:layout_height="25dp"
	                android:layout_marginLeft="5dp"
	                android:background="@drawable/exit_img"/>
	        </LinearLayout>
	    </LinearLayout>
	    
	    <com.my51c.see51.widget.ReboundScrollView 
	        android:id="@+id/reboundscrollview"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        
	        android:layout_marginBottom="60dp"
	        android:fadeScrollbars="true" 
	        android:layout_below="@id/topLayout">
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical"
	        android:background="@color/white"
	        >
	        
	        <LinearLayout 
	            android:id="@+id/btnNewCamera"
	            android:layout_width="fill_parent"
	            android:layout_height="60dp"
	            android:layout_marginLeft="30dp"
	            android:gravity="center_vertical"
	            android:background="@drawable/shap_menu_linearlayout"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:background="@drawable/menu_new_dev"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/installNewCamera" 
	                android:textSize="16sp"
	                android:layout_marginLeft="30dp"
	                android:textColor="@color/black"/>
	        </LinearLayout>
	        <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="2dp"
	                android:layout_marginLeft="45dp"
	                android:background="@drawable/progress_buffering"/>
	        <LinearLayout 
	            android:id="@+id/btnFourViews"
	            android:layout_width="fill_parent"
	            android:layout_height="60dp"
	            android:layout_marginLeft="30dp"
	            android:gravity="center_vertical"
	            android:background="@drawable/shap_menu_linearlayout"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:background="@drawable/fourview"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/btnfourviews" 
	                android:textSize="16sp"
	                android:layout_marginLeft="30dp"
	                android:textColor="@color/black"/>
	        </LinearLayout>
	        <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="2dp"
	                android:layout_marginLeft="45dp"
	                android:background="@drawable/progress_buffering"/>
	        <LinearLayout 
	            android:id="@+id/btnMyCamera"
	            android:layout_width="fill_parent"
	            android:layout_height="60dp"
	            android:layout_marginLeft="30dp"
	            android:gravity="center_vertical"
	            android:background="@drawable/shap_menu_linearlayout"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:background="@drawable/menu_devlist"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/userdevice"
	                android:textSize="16sp"
	                android:layout_marginLeft="30dp"
	                android:textColor="@color/black"/>
	        </LinearLayout>
	        <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="2dp"
	                android:layout_marginLeft="45dp"
	                android:background="@drawable/progress_buffering"/>
	        <LinearLayout 
	            android:id="@+id/btnLocalCamera"
	            android:layout_width="fill_parent"
	            android:layout_height="60dp"
	            android:layout_marginLeft="30dp"
	            android:gravity="center_vertical"
	            android:background="@drawable/shap_menu_linearlayout"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:background="@drawable/menu_mydev"/>
	            <TextView 
	                android:id="@+id/txLocalList"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/landev"
	                android:textSize="16sp"
	                android:layout_marginLeft="30dp"
	                android:textColor="@color/black"/>
	        </LinearLayout>
	        <TextView 
	             android:layout_width="fill_parent"
	             android:layout_height="2dp"
	             android:layout_marginLeft="45dp"
	             android:background="@drawable/progress_buffering"/>
	        
	        <LinearLayout 
	            android:id="@+id/showWarn"
	            android:layout_width="fill_parent"
	            android:layout_height="60dp"
	            android:layout_marginLeft="30dp"
	            android:gravity="center_vertical"
	            android:background="@drawable/shap_menu_linearlayout"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_gravity="center_vertical"
	                android:background="@drawable/menu_alarm"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/alarmNotification"
	                android:textSize="16sp"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="30dp"
	                android:textColor="@color/black"/>
	            <com.my51c.see51.widget.NewSwitch
	                android:id="@+id/showWarnSwitch"
	                android:background="@drawable/phone_my_setting_switch_selected_new"
        			android:textColor="@android:color/white"
        			android:gravity="center_vertical"
        			android:textSize="14sp"
        			android:paddingLeft="5dp"
        			android:paddingRight="5dp"
        			android:layout_width="58dp"
        			android:layout_height="25dp"
	                android:layout_marginLeft="15dp" />
	        </LinearLayout>
	        <TextView 
	             android:layout_width="fill_parent"
	             android:layout_height="2dp"
	             android:layout_marginLeft="45dp"
	             android:background="@drawable/progress_buffering"/>
	        
	        <LinearLayout 
	            android:id="@+id/warnMsg"
	            android:layout_width="fill_parent"
	            android:layout_height="60dp"
	            android:layout_marginLeft="30dp"
	            android:gravity="center_vertical"
	            android:background="@drawable/shap_menu_linearlayout"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:background="@drawable/menu_alarm_history"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/history"
	                android:textSize="16sp"
	                android:layout_marginLeft="30dp"
	                android:textColor="@color/black"/>
	        </LinearLayout>
	        <TextView 
	             android:layout_width="fill_parent"
	             android:layout_height="2dp"
	                android:layout_marginLeft="45dp"
	             android:background="@drawable/progress_buffering"/>
	        
	        <LinearLayout 
	            android:id="@+id/local_video"
	            android:layout_width="fill_parent"
	            android:layout_height="60dp"
	            android:layout_marginLeft="30dp"
	            android:gravity="center_vertical"
	            android:background="@drawable/shap_menu_linearlayout"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:background="@drawable/local_file_img"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/local_file"
	                android:textSize="16sp"
	                android:layout_marginLeft="30dp"
	                android:textColor="@color/black"/>
	        </LinearLayout>
	        <TextView 
	             android:layout_width="fill_parent"
	             android:layout_height="2dp"
	                android:layout_marginLeft="45dp"
	             android:background="@drawable/progress_buffering"/>
	        
	        <LinearLayout 
	            android:id="@+id/changePsw"
	            android:layout_width="fill_parent"
	            android:layout_height="60dp"
	            android:layout_marginLeft="30dp"
	            android:gravity="center_vertical"
	            android:background="@drawable/shap_menu_linearlayout"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:background="@drawable/menu_password"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/changepassword"
	                android:textSize="16sp"
	                android:layout_marginLeft="30dp"
	                android:textColor="@color/black"/>
	        </LinearLayout>
	        <TextView 
	             android:layout_width="fill_parent"
	             android:layout_height="2dp"
	                android:layout_marginLeft="45dp"
	             android:background="@drawable/progress_buffering"/>
	        
	        <LinearLayout 
	            android:id="@+id/about"
	            android:layout_width="fill_parent"
	            android:layout_height="60dp"
	            android:layout_marginLeft="30dp"
	            android:gravity="center_vertical"
	            android:background="@drawable/shap_menu_linearlayout"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:background="@drawable/about"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/about"
	                android:textSize="16sp"
	                android:layout_marginLeft="30dp"
	                android:textColor="@color/black"/>
	        </LinearLayout>
	        <TextView 
	             android:layout_width="fill_parent"
	             android:layout_height="2dp"
	                android:layout_marginLeft="45dp"
	             android:background="@drawable/progress_buffering"/>
	    	 <LinearLayout 
	            android:id="@+id/progamexit"
	            android:layout_width="fill_parent"
	            android:layout_height="60dp"
	            android:layout_marginLeft="30dp"
	            android:gravity="center_vertical"
	            android:background="@drawable/shap_menu_linearlayout"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:background="@drawable/logout"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/exit"
	                android:textSize="16sp"
	                android:layout_marginLeft="30dp"
	                android:textColor="@color/black"/>
	        </LinearLayout>
	        <TextView 
	             android:layout_width="fill_parent"
	             android:layout_height="2dp"
	                android:layout_marginLeft="45dp"
	             android:background="@drawable/progress_buffering"/>
	        
	    </LinearLayout>
	    </com.my51c.see51.widget.ReboundScrollView >
	    
	    <ListView
	        android:visibility="gone"
	        android:id="@+id/setListView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:cacheColorHint="@null"
	        android:clickable="false"
	        android:footerDividersEnabled="true"
	        android:headerDividersEnabled="true"
	        android:dividerHeight="0.5dp" />
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/reboundscrollview"
	        android:background="@color/white">
	        <LinearLayout 
	            android:visibility="gone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:gravity="center_vertical">
	            <ImageView 
	                android:layout_width="20dp"
	                android:layout_height="20dp"
	                android:background="@drawable/menu_set"/>
	        </LinearLayout>
	    </LinearLayout>
	    
	    
	    
	    
	    <Button
	        android:id="@+id/btnProgramExit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginBottom="20dp"
	        android:layout_margin="15dp"
	        android:background="@drawable/btn_exit_style"
	        android:text="@string/exit" 
	        android:visibility="gone"
	        />
	    
	      <Button
	        android:id="@+id/btnLogin"
	        android:visibility="gone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="15dp"
	        android:layout_alignParentTop="true"
	        android:layout_marginBottom="20dp"
	        android:background="@drawable/btn_exit_style"
	        android:text="@string/login" 
	        />
	
	    
	
	</RelativeLayout>