<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:background="@color/qianhui"  
    android:orientation="vertical" >  
  
    <TextView  
        android:id="@+id/tv_dialog_title"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:background="@color/header_bar_color"  
        android:padding="8dp"  
        android:textColor="#eee"  
        android:textSize="20sp"  
        android:textStyle="bold" />  
  
     <RelativeLayout
            android:layout_marginTop="1dp"
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
	        android:layout_height="50dp" 
	        android:background="@color/white">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                android:textColor="@color/text_color"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/userserverip" />

            <EditText
                android:id="@+id/userServerUrlEditText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/edittext_shap"
                android:textSize="15sp"
                android:paddingRight="20dp"
                android:ems="8" 
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_vertical|right"/>

      </RelativeLayout>
      <RelativeLayout
            android:layout_marginTop="1dp"
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
	        android:layout_height="50dp" 
	        android:background="@color/white">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                android:textColor="@color/text_color"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/userserverport" />

            <EditText
                android:id="@+id/userServerPortEditText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/edittext_shap"
                android:textSize="15sp"
                android:paddingRight="20dp"
                android:ems="8" 
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_vertical|right"/>

       </RelativeLayout>  
	   <RelativeLayout
            android:layout_marginTop="1dp"
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
	        android:layout_height="50dp" 
	        android:background="@color/white">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                android:textColor="@color/text_color"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/regserverip" />

            <EditText
                android:id="@+id/regServerUrlEditText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/edittext_shap"
                android:textSize="15sp"
                android:paddingRight="20dp"
                android:ems="8" 
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_vertical|right"/>

      </RelativeLayout>
      <RelativeLayout
            android:layout_marginTop="1dp"
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
	        android:layout_height="50dp" 
	        android:background="@color/white">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                android:textColor="@color/text_color"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/regserverport" />

            <EditText
                android:id="@+id/regServerPortEditText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/edittext_shap"
                android:textSize="15sp"
                android:paddingRight="20dp"
                android:ems="8" 
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_vertical|right"/>

       </RelativeLayout>  
       <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
	        android:layout_height="50dp" 
	        android:background="@color/white"
	        android:orientation="horizontal">
           
			<Button 
			    android:id="@+id/yesbtn"
			    android:layout_width="wrap_content"
               
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/button_shap"
                android:layout_height="50dip"
                android:text="@string/yes"
			    />
			<Button 
			    android:id="@+id/nobtn"
			    android:layout_width="wrap_content"
              
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_height="50dip"
                android:background="@drawable/button_shap"
                android:text="@string/Cancel"
			    />"
       </LinearLayout>  
  	   
</LinearLayout>  